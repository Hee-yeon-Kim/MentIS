<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorGray"
    android:fontFamily="@font/nanumsquareeb"
    tools:context=".MainActivity">
// splash 화면 디자인 시작
    <LinearLayout
        android:id="@+id/splashtext"
        android:elevation="6dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="250dp"
        android:weightSum="8"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="MentIS"
            android:textColor="#fff"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:fontFamily="@font/nanumsquareeb"
            />
        <TextView
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="Mental Innovation Solution"
            android:textColor="#FFFFFF"
            android:textSize="28sp"
            android:textStyle="normal"
            android:fontFamily="@font/nanumsquareb"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POSTECH IMS LAB"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="normal"
            android:textAlignment="center"
            android:layout_marginTop="240dp"
            android:fontFamily="@font/nanumsquareb"

            />

    </LinearLayout>
//splash 화면 디자인 끝

//배경 이미지 슬라이드 할 거
    <ImageView
        android:id="@+id/bgapp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:background="@drawable/back2"
        app:layout_constraintHeight_percent="1.1"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

//메인 시작
<!--    <ScrollView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent"-->
<!--        app:layout_constraintEnd_toEndOf="parent"-->
<!--        >-->
        <LinearLayout
            android:id="@+id/firstmain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                >
                <TextView
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/main_title"
                    android:text="My Dashboard"
                    android:fontFamily="@font/nanumsquareeb"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                   />
                <ImageView
                    android:layout_marginTop="10dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignStart="@+id/main_title"
                    android:src="@mipmap/user_icon"
                    android:layout_below="@id/main_title"
                    android:id="@+id/profileicon"
                    />
                <TextView
                    android:id="@+id/idtext"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/profileicon"
                    android:layout_below="@id/main_title"
                    android:text="계정없음"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/nanumsquarer"
                    />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@mipmap/dbfail"
                    android:layout_toRightOf="@id/idtext"
                    android:layout_marginLeft="10dp"
                    android:layout_alignTop="@+id/idtext"
                    android:id="@+id/dbicon"
                    />
                <TextView
                    android:id="@+id/dbtext"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_toRightOf="@+id/dbicon"
                    android:layout_alignTop="@+id/idtext"

                    android:text="서버 미작동"
                    android:textAlignment="center"
                    android:gravity="center_vertical"
                    android:textSize="16sp"
                    android:textColor="#FFFF"
                    android:fontFamily="@font/nanumsquarer"
                    />

                <Button
                    android:id="@+id/goSetting"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_alignParentRight="true"
                    android:background="@mipmap/gearicon" />
            </RelativeLayout>
            //센서연결파트
            <android.support.v7.widget.CardView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                app:cardElevation="6dp"
                app:cardCornerRadius="28dp"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginStart="30dp"
                app:cardBackgroundColor="@color/panel1"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="20dp"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Devices"
                            android:fontFamily="@font/nanumsquareeb"
                            android:textColor="@color/mygray"
                            android:textSize="18sp"

                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/calli"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="@string/calli"
                            android:textAlignment="center"
                            android:fontFamily="@font/nanumsquareb"
                            android:textSize="13sp"
                            android:padding="7dp"
                            android:background="@drawable/rounded"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ecgpatch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="2dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        >

                        <TextView
                            android:layout_width="130dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_marginLeft="30dp"
                            android:text="ECG Patch"
                            android:textColor="@color/mygray"
                            android:textSize="15sp"
                            android:textStyle="normal" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                        <Switch
                            android:id="@+id/ecgswitch"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:track="@drawable/switch_track_selector"
                            android:thumb="@drawable/switch_thumb"
                            />
                    </LinearLayout>

                    <LinearLayout
                            android:id="@+id/e4patch"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:padding="2dp"
                        android:orientation="horizontal"
                            >

                            <TextView
                                android:layout_width="130dp"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:layout_marginLeft="30dp"

                                android:text="E4 Band"
                                android:textColor="@color/mygray"
                                android:textSize="15sp"
                                android:textStyle="normal" />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1" />
                            <Switch
                                android:id="@+id/e4switch"
                                android:layout_width="wrap_content"
                                android:layout_height="25dp"
                                android:track="@drawable/switch_track_selector"
                                android:thumb="@drawable/switch_thumb"
                                />


                    </LinearLayout>



                </LinearLayout>

            </android.support.v7.widget.CardView>

            <GridLayout
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:columnCount="2"
                android:rowCount="2"
                android:alignmentMode="alignMargins"
                android:columnOrderPreserved="false"
                >
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/panel1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/ecgbutton"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/ecghearticon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="14dp"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:text="ECG Patch\n모니터"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/panel1"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/e4button"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/e4icon2"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textAlignment="center"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:text="E4 Band\n모니터"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/panel1"
                    android:layout_margin="12dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/stressbutton"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/charticon"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:textAlignment="center"
                            android:text="스트레스\n분석"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    app:cardElevation="3dp"
                    app:cardBackgroundColor="@color/panel1"
                    app:cardCornerRadius="12dp"
                    android:layout_margin="12dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:padding="16dp"
                        android:orientation="vertical">
                        <Button
                            android:id="@+id/goUnity"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:background="@mipmap/guruicon"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            android:textColor="#6f6f6f"
                            android:textSize="16sp"
                            android:text="호흡 치료"
                            />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </GridLayout>
        </LinearLayout>
<!--    </ScrollView>-->
</android.support.constraint.ConstraintLayout>