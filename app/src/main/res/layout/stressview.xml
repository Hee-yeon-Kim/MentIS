<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorGray"
    android:fontFamily="@font/nanumsquareeb"
    >

<!--         상단 바       -->
        <RelativeLayout
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/box"
            android:elevation="15dp"
            android:id="@+id/upperbar"
            >

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                />
            <Button
                android:id="@+id/backbutton"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@mipmap/backbtnicon"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="8dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="My Data"
                android:textAlignment="center"
                android:layout_centerInParent="true"
                android:textSize="20sp"
                android:fontFamily="@font/nanumsquareeb"
                android:textColor="@color/colorPrimary"
                />
        </RelativeLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/upperbar"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

         <ImageView
            android:id="@+id/character_capture"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@mipmap/lodingcircle"
            android:scaleType="fitCenter"

            />
        <TextView
            android:id="@+id/now_status"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/character_capture"
            android:text="로딩 중입니다."
            android:gravity="center"
            android:layout_marginLeft="15sp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/mygreen"
            />

        <TextView
            android:id="@+id/graph1name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/now_status"
            android:text="meanHR"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15sp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/view"
            android:drawablePadding="5dp"
            android:textColor="@color/mygray"
            />
        <com.github.mikephil.charting.charts.LineChart

            android:id="@+id/meanHRChart"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/graph1name"
            android:layout_width="match_parent"
            android:layout_height="300dp" />
        <TextView
            android:id="@+id/graph2name"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_below="@+id/meanHRChart"
            android:text="meanST"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15sp"
            android:textSize="14sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:drawableStart="@mipmap/view"
            android:drawablePadding="5dp"
            android:textColor="@color/mygray"
            />
        <com.github.mikephil.charting.charts.LineChart

            android:id="@+id/meanSTChart"
            android:layout_marginTop="5dp"
            android:layout_below="@+id/graph2name"
            android:layout_width="match_parent"

            android:layout_height="300dp" />

                <TextView
                    android:id="@+id/graph3name"
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:layout_below="@+id/meanSTChart"
                    android:text="Stress"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="15sp"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:drawableStart="@mipmap/view"
                    android:drawablePadding="5dp"
                    android:textColor="@color/mygray"
                    />
                <com.github.mikephil.charting.charts.BarChart

                    android:id="@+id/StressChart"
                    android:layout_marginTop="5dp"
                    android:layout_below="@+id/graph3name"
                    android:layout_width="match_parent"
                    android:layout_height="200dp" />
            </RelativeLayout>

        </ScrollView>

</android.support.constraint.ConstraintLayout>